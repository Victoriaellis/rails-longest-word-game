
<div class="container">
  <h3>Welcome to the longest word-game!</h3>
  <h3>Here is your word grid</h3>
  <h2><%= @letters %></h2>
</div>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label>What is the longest word you can find:</label>
